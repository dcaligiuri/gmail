{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "listFiles": false,
    "noLib": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es5",
    "outDir": "./bundles"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "compiled"
  }
}
